{% extends "layout.njk" %}

{% block head %}

    <title>{{recipe.title}}</title>

{% endblock %}

{% block content %}

 <div class="c-recipe">
 

        <div class="recipe" id=" {{recipe.id}} ">

            <div class="recipe-img">
                <img src=" {{ recipe.image }} " alt="Imagem de {{ recipe.image }}">
            </div>

            <div class="recipe-info">
                <p class="title" >{{ recipe.title }}</p>
                <p class="make" >{{ recipe.author }}</p>
                <p class="ingredients" >{{ recipe.ingredients }}</p>
                <p class="preparo" >{{ recipe.preparation }}</p>
                <p class="info" >{{ recipe.information }}</p>

            </div>

        </div> 

</div>

{% endblock %}