{% extends "layout.njk" %}

{% block head %}

    <title>Recipes</title>

{% endblock %}

{% block content %}

 <div class="card-recipes">

    {% for recipe in recipes %}

        <div class="card-recipe" id="{{recipe.id}}">

            <div class="card-recipe-img">
                <img src=" {{ recipe.image }} " alt="Imagem de {{ recipe.image }}">
            </div>
        </div>

    {% endfor %}

</div>

<script src="scripts.js"> </script>

{% endblock %}

