{% extends "layout.njk" %}

{% block head %}

<title>Portfolio -  Thyago Nunes</title>
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

{% endblock %} 

{% block content %}

	<h1 class="title-page">VÃ­deos</h1>
	
	<section class="cards">

		{%for item in items %}
		<div class="card" id="{{item.id}}">
			<div class="card_image_container {{ 'featured-wrapper' if item.featured }}" >
				<img src="https://img.youtube.com/vi/{{item.id}}/0.jpg" alt="Imagem de {{item.titleVideos}}">
				{% if item.featured %}
					<div class="featured">Featured</div>
				{% endif %}
			</div>
			<div class="card_content">
				<p>{{item.titleVideo}}</p>
			</div>
			<div class="card_info">
				<p class="card_time">{{item.duration}}</p>
				<p class="card_price">{{item.feeling}}</p>
			</div>
		</div>
		{% endfor %}

	</section>

	<script src="/scripts.js"></script>

{% endblock %}